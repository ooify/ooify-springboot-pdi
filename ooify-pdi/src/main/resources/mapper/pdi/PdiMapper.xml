<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.ooify.pdi.mapper.PdiMapper">

    <resultMap type="PipVideoVO" id="PipeVideoVOResult">
        <result property="id" column="id"/>
        <result property="videoName" column="video_name"/>
        <result property="roadId" column="road_id"/>
        <result property="videoUrl" column="video_url"/>
        <result property="thumbnailUrl" column="thumbnail_url"/>
        <result property="fileSize" column="file_size"/>
        <result property="mimeType" column="mime_type"/>
        <result property="duration" column="duration"/>
        <result property="resolution" column="resolution"/>
        <result property="pipeInfo" column="pipe_info"/>
        <result property="uploadStatus" column="upload_status"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectPipeVideoVo">
        select id,
               video_name,
               road_id,
               video_url,
               thumbnail_url,
               file_size,
               mime_type,
               duration,
               resolution,
               pipe_info,
               upload_status,
               create_time
        from pipe_video
    </sql>

    <select id="selectPipeVideoVOListByUser" resultMap="PipeVideoVOResult">
        <include refid="selectPipeVideoVo"/>
        <where>
            <if test="pipVideoVO.videoName != null and pipVideoVO.videoName != ''">
                and video_name like concat('%', #{pipVideoVO.videoName}, '%')
            </if>
            <if test="pipVideoVO.roadId != null">
                and road_id = #{pipVideoVO.roadId}
            </if>
            <if test="pipVideoVO.mimeType != null and pipVideoVO.mimeType != ''">
                and mime_type = #{pipVideoVO.mimeType}
            </if>
            <if test="pipVideoVO.uploadStatus != null">
                and upload_status = #{pipVideoVO.uploadStatus}
            </if>
            <if test="pipVideoVO.params.beginCreateTime != null and pipVideoVO.params.beginCreateTime != ''
            and pipVideoVO.params.endCreateTime != null and pipVideoVO.params.endCreateTime != ''">
                and create_time between #{pipVideoVO.params.beginCreateTime} and #{pipVideoVO.params.endCreateTime}
            </if>
            and create_by = #{username}
            and is_deleted = 0
        </where>
        order by create_time desc
    </select>
    <select id="selectPipeVideoVOById" parameterType="Long" resultType="me.ooify.pdi.domain.vo.PipVideoVO">
        <include refid="selectPipeVideoVo"/>
        where id = #{id}
    </select>
    <select id="selectPipeVideoVOByRoadId" resultType="me.ooify.pdi.domain.vo.PipVideoVO">
        <include refid="selectPipeVideoVo"/>
        where road_id = #{roadId}
        and is_deleted = 0
        order by create_time desc
    </select>

    <update id="deletePipeVideoById" parameterType="Long">
        update pipe_video
        set is_deleted = 1
        where id = #{id}
    </update>

    <update id="deletePipeVideoByIds" parameterType="String">
        update pipe_video
        set is_deleted = 1
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>


    <resultMap id="PipVideoTableVOResult" type="me.ooify.pdi.domain.vo.PipVideoTableVO">
        <result property="id" column="id"/>
        <result property="videoName" column="video_name"/>
        <result property="videoUrl" column="video_url"/>
        <result property="thumbnailUrl" column="thumbnail_url"/>
        <result property="roadId" column="road_id"/>
        <result property="pipeInfo" column="pipe_info"/>
        <result property="uploadStatus" column="upload_status"/>
        <result property="taskStatus" column="task_status"/>
        <result property="reportUrl" column="report_url"/>
        <result property="defectCount" column="defect_count"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectPipVideoTable">
        SELECT
            pv.id,
            pv.video_name,
            pv.video_url,
            pv.thumbnail_url,
            pv.road_id,
            ANY_VALUE(pv.pipe_info) AS pipe_info,
            pv.upload_status,

            ANY_VALUE(rt.task_status) AS task_status,
            ANY_VALUE(rt.report_url) AS report_url,

            ANY_VALUE(pv.create_time) AS create_time,

            COUNT(pd.id) AS defect_count

        FROM pipe_video pv
                 LEFT JOIN report_task rt ON pv.id = rt.video_id
                 LEFT JOIN pipe_defect pd ON pv.id = pd.pipe_video_id
    </sql>
    <select id="selectPipVideoTableList"
            parameterType="me.ooify.pdi.domain.vo.PipVideoTableVO"
            resultMap="PipVideoTableVOResult">

        <include refid="selectPipVideoTable"/>

        <where>
            <if test="id != null"> AND pv.id = #{id} </if>

            <if test="videoName != null and videoName != ''">
                AND pv.video_name LIKE concat('%', #{videoName}, '%')
            </if>

            <if test="roadId != null"> AND pv.road_id = #{roadId} </if>

            <if test="uploadStatus != null">
                AND pv.upload_status = #{uploadStatus}
            </if>

            <if test="taskStatus != null">
                AND rt.task_status = #{taskStatus}
            </if>

            <if test="createBy != null and createBy != ''">
                AND pv.create_by = #{createBy}
            </if>

            <!-- 创建时间筛选 -->
            <if test="params.beginCreateTime != null and params.beginCreateTime != ''">
                AND pv.create_time &gt;= #{params.beginCreateTime}
            </if>
            <if test="params.endCreateTime != null and params.endCreateTime != ''">
                AND pv.create_time &lt;= #{params.endCreateTime}
            </if>
        </where>

        GROUP BY pv.id

        <!-- 排序规则 -->
        <choose>
            <when test="params.orderBy != null and params.orderBy != ''">

                <!-- 根据字段动态排序 -->
                ORDER BY
                ${params.orderBy}
                <if test="params.orderType != null and params.orderType != ''">
                    ${params.orderType}
                </if>

            </when>

            <!-- 默认排序 -->
            <otherwise>
                ORDER BY pv.create_time DESC
            </otherwise>
        </choose>

    </select>
</mapper>